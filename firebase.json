{
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/app-release.apk",
        "destination": "https://storage.googleapis.com/seu-bucket/nome-do-seu-apk.apk"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
